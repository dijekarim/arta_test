<section class="content-header">
  <h1> 
  &nbsp; Product <small> List </small></h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Master Product</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box">
        <div class="box-header with-border">
          <%= link_to new_product_path, class: "btn btn-sm btn-primary pull-right" do %>
            <span class="glyphicon glyphicon-plus"></span> Add Product
          <% end %>
        </div><!-- /.box-header -->
        <div class="box-body">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th with="10%">No.</th>
                <th>Nama</th>
                <th>Kode</th>
                <th colspan="3" style="text-align: center;">Action</th>
              </tr>
            </thead>

            <tbody>
            <% @products.each_with_index do |product, idx| %>
              <tr>
                <td><%= idx+1 %>. </td>
                <td><%= product.nama %></td>
                <td><%= product.kode %></td>
                <td style="text-align: center;"><%= link_to product, class: "btn btn-default btn-xs" do %><span class="glyphicon glyphicon-eye-open"></span> Show<% end %></td>
                <td style="text-align: center;"><%= link_to edit_product_path(product), class: "btn btn-default btn-xs" do %><span class="glyphicon glyphicon-edit"></span> Edit<% end %></td>
                <td style="text-align: center;"><%= link_to product, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" do %><span class="glyphicon glyphicon-trash"></span> Delete<% end %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div align="right"><%= paginate @products %></div>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
</section>