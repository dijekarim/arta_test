<header class="main-header">

  <!-- Logo -->
  <a href="<%= root_path %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>T</b>A</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Arta</b>Test</span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="/img/avatar5.png" class="user-image" alt="User Image">
            <span><%= current_user.email %><i class="caret"></i></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <img src="/img/avatar5.png" class="img-circle" alt="User Image">

              <p>
                <%= current_user.email %>
                <small>RoR Developer</small>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="<%= edit_user_registration_path %>" class="btn btn-primary btn-flat">Edit Profile</a>
              </div>
              <div class="pull-right">
                <%= link_to signout_path, class: "btn btn-default btn-flat", title: "Sign out" do%>
                  Sign out
                <% end %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>

  </nav>
</header>
